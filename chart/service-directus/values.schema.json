{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "pullPolicy": { "type": "string" },
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "imagePullSecrets": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["pullPolicy", "repository", "tag"]
    },
    "replicaCount": { "type": "integer" },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": { "type": "integer", "minimum": 1 }
      },
      "required": ["type", "port"]
    },
    "persistence": {
      "type": "object",
      "properties": {
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
        },
        "storageClass": { "type": "string" },
        "size": { "type": "string" },
        "enabled": { "type": "boolean" },
        "extensions": { "type": "boolean" }
      },
      "required": ["accessMode", "size", "enabled"]
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      },
      "required": ["create"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "parentDomain": { "type": ["string", "null"] },
        "clusterIssuer": { "type": "string" },
        "domain": { "type": ["string", "null"] }
      },
      "required": ["clusterIssuer"],
      "oneOf": [
        {
          "properties": {
            "parentDomain": { "type": "null" },
            "domain": { "type": "string" }
          },
          "required": ["domain"]
        },
        {
          "properties": {
            "domain": { "type": "null" },
            "parentDomain": { "type": "string" }
          },
          "required": ["parentDomain"]
        }
      ]
    },
    "auth": {
      "type": "object",
      "properties": {
        "admin": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": ["email", "password"]
        },
        "secret": { "type": "string" }
      },
      "required": ["admin", "secret"]
    },
    "extraEnv": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" },
          "valueFrom": {
            "type": "object",
            "properties": {
              "secretKeyRef": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "key": { "type": "string" }
                },
                "required": ["name", "key"]
              }
            }
          }
        },
        "required": ["name"],
        "oneOf": [{ "required": ["value"] }, { "required": ["valueFrom"] }]
      }
    },
    "extraEnvFrom": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "configMapRef": { "type": "object" },
          "secretRef": { "type": "object" }
        },
        "oneOf": [
          { "required": ["configMapRef"] },
          { "required": ["secretRef"] }
        ]
      }
    },
    "livelinessProbe": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      },
      "required": ["enabled"]
    },
    "readynessProbe": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      },
      "required": ["enabled"]
    },
    "postgres": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "majorVersion": { "type": "integer" },
        "persistence": {
          "type": "object",
          "properties": {
            "size": { "type": "string" },
            "storageClass": { "type": "string" }
          },
          "required": ["size"]
        }
      },
      "required": ["enabled"]
    }
  },
  "required": [
    "image",
    "replicaCount",
    "service",
    "persistence",
    "serviceAccount",
    "ingress",
    "auth",
    "livelinessProbe",
    "readynessProbe",
    "postgres"
  ]
}
